
.info {
	width: 100%;
	height: 350rpx;
	background-image: linear-gradient(120deg, #84fab0 0%, #8fd3f4 100%);
	display: flex;
	align-items: center;
	justify-content: space-around;
}
.info_name {
	font-size: 34rpx;
}
.info_cnt{
		position: relative;
}
.info_cnt,
.info_name {
	display: flex;
	flex-direction: column;
	align-items: center;
}
.info_img {
	width: 100rpx;
	height: 100rpx;
	margin-bottom: 10rpx;
	border-radius: 50%;
}
.info_name {
	margin-bottom: 10rpx;
}
.noLogin {
	width: 80%;
	height: 450rpx;
	margin: 40rpx auto;
}
.noLogin_img {
	width: 100%;
	height: 100%;
}
.noLogin_btn {
	border-radius: 30rpx;
	width: 400rpx;
	height: 100rpx;
	border: 1px solid;
	text-align: center;
	line-height: 100rpx;
	margin: 150rpx auto;
	color: #FF5F15;
}
.vip{
	    top: 70rpx;
	    position: absolute;
	    width: 40rpx;
	    height: 40rpx;
	    left: 75rpx;
}

